{
  "name": "ustaxx-functions",
  "version": "1.0.0",
  "description": "USTAXX Credit Dispute System - Cloud Functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "emulators": "npm run build && firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "seed": "ts-node scripts/seed-emulator.ts",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/kms": "^4.0.0",
    "@sendgrid/mail": "^8.1.0",
    "@sparticuz/chromium": "^121.0.0",
    "axios": "^1.6.7",
    "date-fns": "^3.3.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^4.9.0",
    "handlebars": "^4.7.8",
    "isomorphic-dompurify": "^2.4.0",
    "joi": "^17.12.0",
    "puppeteer-core": "^21.7.0",
    "rate-limiter-flexible": "^5.0.0",
    "twilio": "^4.21.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.1",
    "firebase-functions-test": "^3.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "private": true
}
